<div class="container">
	<div class="row">
		<!-- User info部分 -->
		<div class="col-xs-3">
			<h2>User info</h2>
			<!-- 仮で実装（後で直す） -->
			<%= image_tag 'no_image.jpg'%>

			<table class="table">
				<tbody>
					<tr></tr>
					<tr>
						<th>name</th>
						<!-- 仮置き -->
						<th>testtest</th>
					</tr>
					<tr>
						<th>introduction</th>
						<!-- 仮置き -->
						<th>introtest</th>
					</tr>
				</tbody>
			</table>

			<div class="row">
				<!-- 仮置き -->
				<a class="col-xs-12 btn btn-default glyphicon glyphicon-wrench"></a>
			</div>

			<h2>New book</h2>

			<!-- 新規投稿部分 -->
			<%= form_for(@book, url: new_book_path) do |f| %>
				<div class="field row">
					<p><%= f.label :title %></p>
					<%= f.text_field :title, class: "col-xs-12" %>
				</div>

				<div class="field row">
					<p><%= f.label :opinion %></p>
					<%= f.text_area :body, class: "col-xs-12" %>
				</div>

				<div class="row">
					<p><%= f.submit "Create Book", class: "col-xs-12 btn btn-primary" %></p>
				</div>
				

				
			<% end %>


		</div>

		<!-- Books部分 -->
		<div class="col-xs-9">
			<h2>Books</h2>

			<table class="table">
				<thead>
					<tr>
						<th></th>
						<th>Title</th>
						<th>Opinion</th>
						<th colspan="3"></th>
					</tr>
				</thead>

				<tbody>

				</tbody>
			</table>
		</div>
	</div>
</div>
