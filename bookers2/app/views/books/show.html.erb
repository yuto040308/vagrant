<div class="container">

	<div class="row">
		<!-- User info部分 -->
		<div class="col-xs-3">
			<h2>User info</h2>
			<!-- 仮で実装（後で直す） -->
			<!-- <%= image_tag 'no_image.jpg'%> -->

			<%= attachment_image_tag @user, :profile_image, :fill, 100, 100, format: "jpeg", fallback: "no_image.jpg" %>

			<table class="table">
				<tbody>
					<tr></tr>
					<tr>
						<th>name</th>
						<th><%= @user.name %></th>
					</tr>
					<tr>
						<th>introduction</th>
						<th><%= @user.introduction %></th>
					</tr>
				</tbody>
			</table>

			<div class="row">
				<%= link_to edit_user_path(@user.id), class: "col-xs-12 btn btn-default glyphicon glyphicon-wrench" do %>
				<% end %>
			</div>

			<h2>New book</h2>

			<!-- 新規投稿部分 -->
			<%= form_for(@book) do |f| %>
				<div class="field row">
					<p><%= f.label :title %></p>
					<%= f.text_field :title, class: "col-xs-12" %>
				</div>

				<div class="field row">
					<p><%= f.label :opinion %></p>
					<%= f.text_area :body, class: "col-xs-12" %>
				</div>

				<div class="row">
					<p><%= f.submit "Create Book", class: "col-xs-12 btn btn-primary" %></p>
				</div>
				

				
			<% end %>


		</div>

		<!-- Books部分 -->
		<div class="col-xs-9">
			<h2>Book detail</h2>

			<table class="table">

				<tbody>

					<tr>
						<td>
							<%= link_to user_path(@user.id) do %>
								<%= attachment_image_tag @book.user, :profile_image, format: 'jpeg', fallback: "no_image.jpg", size: "100x100" %>
								<br>
								<%= @user.name %>
							<% end %>
						</td>
						<td><%= link_to @book.title, book_path(@book.id) %></td>
						<td><%= @book.body %></td>
						<td><%= link_to "Edit", edit_book_path(@book.id), class: "btn-sm btn-success" %></td>
						<td><%= link_to "Destroy", book_path(@book.id), class: "btn-sm btn-danger", method: :delete, "data-confirm" => "本当に消しますか？" %></td>
					</tr>

				</tbody>
			</table>
		</div>
	</div>
</div>

<div class="container">
	<div class="row">
		<div class="col-xs-3 col-xs-offset-9">
			<p>CopyRight Infratop.inc</p>
		</div>
	</div>
</div>
