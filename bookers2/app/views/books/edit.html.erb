<div class="container">
	<div class="row">
		<div class="col-md-6 col-md-offset-3">
			<h1>Editing Book</h1>

			<%= form_for(@book) do |f| %>
				<div class="field row">
					<p><%= f.label :title %></p>
					<%= f.text_field :title, class: "col-xs-12" %>
				</div>

				<div class="field row">
					<p><%= f.label :opinion %></p>
					<%= f.text_area :body, class: "col-xs-12" %>
				</div>

				<div class="row">
					<p><%= f.submit "Update Book", class: "col-xs-12 btn btn-primary" %></p>
				</div>
				
			<% end %>

			<%= link_to "Show", book_path(@book.id) %>
			<a> | </a>
			<!-- book一覧ができるまでの仮実装 -->
			<a href="#">Back</a>


		</div>

		<div class="col-md-3">
		</div>
	</div>
</div>

